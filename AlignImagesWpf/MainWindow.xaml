<Window x:Class="AlignImagesWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Align Images (WPF)"
        Height="420"
        Width="720"
        MinHeight="420"
        MinWidth="620">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0,0,0,12">
            <Button x:Name="SelectFolderButton"
                    Width="150"
                    Height="34"
                    Margin="0,0,12,0"
                    Content="Select Folder"
                    Click="SelectFolderButton_Click" />
            <Button x:Name="AlignImagesButton"
                    Width="150"
                    Height="34"
                    Content="Align Images"
                    Click="AlignImagesButton_Click" />
        </StackPanel>

        <TextBlock x:Name="SelectedFolderTextBlock"
                   Grid.Row="1"
                   Margin="0,0,0,12"
                   Text="No folder selected."
                   TextWrapping="Wrap" />

        <ProgressBar x:Name="ProgressBar"
                     Grid.Row="2"
                     Height="16"
                     Minimum="0"
                     Maximum="100"
                     Value="0" />

        <TextBlock x:Name="ProgressPercentTextBlock"
                   Grid.Row="3"
                   Margin="0,8,0,12"
                   FontWeight="SemiBold"
                   Text="0 %" />

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,6" Text="Start time:" />
            <TextBlock x:Name="StartTimeValueTextBlock" Grid.Row="0" Grid.Column="1" Margin="0,0,0,6" Text="-" />

            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,6" Text="End time:" />
            <TextBlock x:Name="EndTimeValueTextBlock" Grid.Row="1" Grid.Column="1" Margin="0,0,0,6" Text="-" />

            <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,6" Text="Time taken:" />
            <TextBlock x:Name="ElapsedValueTextBlock" Grid.Row="2" Grid.Column="1" Margin="0,0,0,6" Text="00:00:00" />

            <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,8,6" Text="Should take (est.):" />
            <TextBlock x:Name="EstimatedTotalValueTextBlock" Grid.Row="3" Grid.Column="1" Margin="0,0,0,6" Text="-" />

            <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,0,8,0" Text="Time left (est.):" />
            <TextBlock x:Name="EstimatedRemainingValueTextBlock" Grid.Row="4" Grid.Column="1" Margin="0,0,0,0" Text="-" />
        </Grid>
    </Grid>
</Window>
